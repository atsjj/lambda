{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "outDir": "dist",
    "target": "es2018",
    "lib": [
      "es2018"
    ],
    "paths": {
      "*": [
        "types/*"
      ]
    }
  },
  "exclude": [
    "dist",
    "src",
    "tmp"
  ],
  "include": [
    "index.ts",
    "lib/**/*.ts",
    "tests/**/*.ts"
  ]
}
