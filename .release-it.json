{
  "hooks": {
    "after:bump": "npm run build",
    "before:release": "auto-changelog"
  },
  "git": {
    "changelog": "auto-changelog --stdout --template .auto-changelog-compact.hbs --unreleased",
    "requireCleanWorkingDir": true,
    "requireUpstream": true,
    "requireCommits": false,
    "addUntrackedFiles": false,
    "commit": true,
    "commitMessage": "${version}",
    "commitArgs": "--gpg-sign",
    "tag": true,
    "tagName": "${version}",
    "tagAnnotation": "${version}",
    "tagArgs": "--sign",
    "push": true,
    "pushArgs": "--follow-tags",
    "pushRepo": "origin"
  },
  "npm": {
    "publish": true,
    "publishPath": "dist",
    "access": "public"
  }
}
